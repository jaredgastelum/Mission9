@page
@model AmazonProject.Pages.CartModel
@{
}

<!--I ADDED THIS BOOTSTRAP JUMBOTRON MYSELF-->
<div class="jumbotron">
    <h1>Shopping Cart</h1>
</div>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <!-- THIS IS GOING TO LOAD ALL THE INFORMATION FOR EACH BOOK IN THE CART-->
    <tbody>
        @foreach(var i in Model.basket.Items)
            {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>$@i.Book.Price</td>
            <td>$@(i.Quantity * i.Book.Price)</td>
        </tr>
            }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>$@Model.basket.CalculateTotal().ToString()</td>
        </tr>
    </tfoot>

</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>