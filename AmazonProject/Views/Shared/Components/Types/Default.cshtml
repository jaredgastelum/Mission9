@{
}

@model IEnumerable<string>


<!-- I ADDED MY OWN BOOTSTRAP TO MAKE THE BUTTONS LINE UP IN A ROW-->
<div class="row d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookType="" asp-route-pageNum="1" class="btn btn-outline-secondary m-1 col" style="width: 100px;">Home</a>
    <br />

    <!-- LOOP THAT GOES THROUGH ALL THE CATEGORIES AND PRINTS THEM AS LINKS ON THE LEFT SIDE OF THE PAGE TO NAVIGATE-->

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookType="@t" asp-route-pageNum="1"
           class="col m-1 btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
        <br />
    }

</div>